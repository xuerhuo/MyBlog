<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.erhuo.myblog"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.erhuo.myblog.controller.SplashActivity"
            android:label="@string/app_name" >

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name="org.erhuo.myblog.controller.LoginActivity"
            android:label="login" />
        <activity android:name="org.erhuo.myblog.controller.CindexActivity" />

        <receiver android:name="org.erhuo.myblog.controller.MyReceiver" >
            <intent-filter>
                <action android:name="sendbroadcast" />
            </intent-filter>
        </receiver>

        <service android:name="org.erhuo.myblog.controller.MyService" >
            <intent-filter>
                <action android:name="MyService" />
            </intent-filter>
        </service>

        <activity
            android:name="org.erhuo.myblog.controller.FirstloadActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_firstload"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.erhuo.myblog.controller.LoginedIndexActivity" />
    </application>

</manifest>