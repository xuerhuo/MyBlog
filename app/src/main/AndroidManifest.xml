<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.erhuo.myblog"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.erhuo.myblog.controller.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
          <activity
            android:name="org.erhuo.myblog.controller.LoginActivity"
            android:label="login" >
        </activity>
        <activity android:name=".controller.CindexActivity"></activity>
        <receiver android:name=".controller.MyReceiver">
            <intent-filter>
                <action android:name="sendbroadcast"></action>
            </intent-filter>
        </receiver>
        <service android:name=".controller.MyService">
            <intent-filter>
                <action android:name="MyService"></action>
            </intent-filter>
        </service>
    </application>

</manifest>
